{
  "name": "eks-code-server-ide",
  "version": "0.1.0",
  "bin": {
    "eks-code-server-ide": "bin/eks-code-server-ide.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "validate": "tsc && node scripts/validate.js",
    "lint": "eslint lib/**/*.ts",
    "security-scan": "npm run synth && checkov -d cdk.out --framework cloudformation",
    "synth": "cdk synth",
    "synth:config": "cdk --app 'npx ts-node --prefer-ts-exts bin/config-app.ts' synth",
    "deploy:config": "cdk --app 'npx ts-node --prefer-ts-exts bin/config-app.ts' deploy",
    "deploy:main": "cdk deploy",
    "deploy:auto-shutdown": "cdk --app 'npx ts-node --prefer-ts-exts bin/auto-shutdown-app.ts' deploy",
    "destroy:auto-shutdown": "cdk --app 'npx ts-node --prefer-ts-exts bin/auto-shutdown-app.ts' destroy --force",
    "diff": "cdk diff",
    "cdk": "cdk"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "22.7.9",
    "@eslint/js": "^9.32.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "aws-cdk": "2.1022.0",
    "cdk-nag": "^2.36.47",
    "eslint": "^9.32.0",
    "eslint-plugin-security": "^3.0.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3"
  },
  "dependencies": {
    "aws-cdk-lib": "2.206.0",
    "constructs": "^10.0.0"
  }
}
